diff --git a/system/uapp/sel4zircon-test/main.c b/system/uapp/sel4zircon-test/main.c
new file mode 100644
index 000000000..a88841abd
--- /dev/null
+++ b/system/uapp/sel4zircon-test/main.c
@@ -0,0 +1,61 @@
+#include <stdio.h>
+#include <stdlib.h>
+#include <string.h>
+#include <assert.h>
+
+#include <fdio/io.h>
+#include <fdio/util.h>
+
+#include <zircon/syscalls.h>
+#include <zircon/syscalls/log.h>
+
+#define NUM_WARMUP  10u
+
+int main(int argc, const char** argv) {
+
+    // setup stdout
+    zx_handle_t h;
+    assert(zx_log_create(0, &h) == 0);
+    fdio_t* logger;
+    assert((logger = fdio_logger_create(h)) != NULL);
+    close(1);
+    fdio_bind_to_fd(logger, 1, 0);
+
+    const char *str = "Hello world!\n";
+    zx_debug_write(str, strlen(str));
+
+    printf("Hello world!\n");
+
+    uint64_t start, end;
+
+    for (size_t i = 0; i < NUM_WARMUP; ++i) {
+        start = zx_ticks_get();
+        end = zx_ticks_get();
+    }
+    printf("Got ticks: %lu\n", (end - start));
+
+    for (size_t i = 0; i < NUM_WARMUP; ++i) {
+        start = zx_ticks_get();
+        zx_syscall_test_0();
+        end = zx_ticks_get();
+    }
+    printf("Got ticks: %lu\n", (end - start));
+
+    for (size_t i = 0; i < NUM_WARMUP; ++i) {
+        start = zx_ticks_get();
+        zx_syscall_test_1(1);
+        end = zx_ticks_get();
+    }
+    printf("Got ticks: %lu\n", (end - start));
+
+    for (size_t i = 0; i < NUM_WARMUP; ++i) {
+        start = zx_ticks_get();
+        zx_syscall_test_8(1,2,3,4,5,6,7,8);
+        end = zx_ticks_get();
+    }
+    printf("Got ticks: %lu\n", (end - start));
+
+    while (1);
+
+    return 0;
+}
